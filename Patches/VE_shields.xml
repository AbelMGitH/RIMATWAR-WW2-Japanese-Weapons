<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Expanded Framework</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="HRK_Type14Nambu"] </xpath>
                    <value>
                        <li Class="VFECore.ThingDefExtension">
                            <usableWithShields>true</usableWithShields>
                        </li>
                    </value>
                </li>

                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="HRK_Type26Revolver"] </xpath>
                    <value>
                        <li Class="VFECore.ThingDefExtension">
                            <usableWithShields>true</usableWithShields>
                        </li>
                    </value>
                </li>

                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="HRK_Type3Grenade" or defName="HRK_Type89Grenade" or defName="HRK_Type97Grenade"] </xpath>
                    <value>
                        <li Class="VFECore.ThingDefExtension">
                            <usableWithShields>true</usableWithShields>
                        </li>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>