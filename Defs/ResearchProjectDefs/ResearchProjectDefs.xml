<Defs>

    <ResearchProjectDef>
        <defName>HRK_Research_SimpleGunsmithing</defName>
        <label>repeating firearms</label>
        <description>Build basic, repeating firearms at a smithy or machining table.</description>
        <baseCost>300</baseCost>
        <techLevel>Industrial</techLevel>
        <prerequisites>
            <li>Smithing</li>
            <li MayRequire="VanillaExpanded.VWE">VWE_Gunpowder</li>
            <li MayRequire="CETeam.CombatExtendedGuns">Gunpowder</li>
            <li MayRequire="CE.BlackPowderRifle">Stage2Rifle_BP</li>
            <li MayRequire="CE_BlackPowderGuns_copy">Stage2R_BP</li>
        </prerequisites>
        <researchViewX>1</researchViewX>
        <researchViewY>0.70</researchViewY>
        <tab>HRK_ResearchTab_Gunsmithing</tab>
    </ResearchProjectDef>

